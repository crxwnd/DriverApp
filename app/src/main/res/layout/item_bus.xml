<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvBus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Bus Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bus"
            android:contentDescription="Bus"
            android:layout_marginEnd="16dp" />

        <!-- Details -->
        <LinearLayout
            android:id="@+id/llDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBusNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unidad #123"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvBusPlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placa: ABC-1234"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvBusModel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modelo: Volvo 2024"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvBusCapacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capacidad: 50 pax"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Checkmark (visible cuando se selecciona) -->
        <ImageView
            android:id="@+id/ivCheckmark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_checkmark"
            android:contentDescription="Selected"
            android:visibility="gone"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>